/* 导入单个电影的样式 */
@import "../movie/movie-template.wxss";

.movie-list-container{
    background-color: #fff;
    display: flex;
    flex-direction: colnum;
}

.inner-container{
    margin:0 auto 20rpx;
}

.movie-header{
    padding: 30rpx 20rpx 20rpx;
}

.slogan{
    font-size:24rpx;
}

.more{
    float:right;
}

.more-text{
    vertical-align: middle;
    margin-right: 10rpx;
    color:#1f4ba5;
    font-size:24rpx;
}

.more-image{
    width:9rpx;
    height:16rpx;
    vertical-align: middle;
}

.movies-container{
    display: flex;
    flex-direction: row;
}